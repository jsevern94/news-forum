<div class="flex justify-left" style="font-family: 'EB Garamond', serif;">
    <button
        class="text-2xl tracking-wider bg-blue-700 hover:bg-blue-800 text-white py-2 px-4 mt-4 mb-4 ml-4 rounded-lg">
        <a href="/">Home</a>
    </button>
</div>

<div class="flex justify-center">
    <h2 class="text-2xl md:text-4xl lg:text-5xl text-center w-4/5">{{{title}}}</h2>
</div>
<p class="text-xl md:text-2xl text-blue-500 hover:text-blue-300 mt-4 w-full text-center"><a href="{{{link}}}"
        target="_blank">View Article</a></p>

<div class="pb-40">
    {{#each note}}
    <div class="w-4/5 mx-auto">
        <h4 class="ml-12 mt-4 font-bold">{{{this.username}}} says:</h4>
        <div class="flex">
            <p class="bg-blue-200 px-3 py-2 ml-10 mt-w rounded-lg border-black shadow-lg z-10">{{{this.body}}}</p>
            <div class="w-2/12 md:w-2/5 lg:w-3/5 flex-shrink-0"></div>
        </div>
    </div>
    {{/each}}
</div>

<div class="w-full bg-blue-200 fixed bottom-0 flex justify-center z-20">
    <form action="/articles/{{{_id}}}" method="POST">
        <input type="text" name="username" class="rounded-lg appearance-none my-4 focus:outline-none px-3 py-2"
            placeholder="Your name" required>
        <input type="text" name="body" class="rounded-lg appearance-none my-4 focus:outline-none px-3 py-2"
            placeholder="Your comment..." required>
        <input
            class="text-xl tracking-wider bg-blue-700 hover:bg-blue-800 text-white py-2 px-4 mt-4 mb-4 ml-4 rounded-lg"
            type="submit">
    </form>
</div>

<style>
    body {
        background-image: url("../images/wall-street.jpg") !important;
    }
</style>